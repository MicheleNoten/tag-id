    <%= link_to "Add to Wardrobe", product_wardrobes_path(@product.id), data: { turbo_method: :post }, class: "button button-green w-100 m-0 mt-4" %>
    <% end %>
  <%# <%= link_to "Add to Wardrobe", product_wardrobes_path(@product.id), data: { turbo_method: :post }, class: "button button-green w-100 m-0 mt-4"
